<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="11dp">

    <ImageView
        android:id="@+id/rv_class_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/search_result_image" />

    <RelativeLayout
        android:id="@+id/search_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rv_class_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6.5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rv_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_regular"
                android:text="태권도 초급반"
                android:textColor="#585858"
                android:textSize="12.5sp" />

            <TextView
                android:id="@+id/rv_gym_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="5.3dp"
                android:fontFamily="@font/nanumsquare_bold"
                android:text="이대훈 짐선생"
                android:textColor="#505050"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/gym_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gym_index" />

                <TextView
                    android:id="@+id/gym_index_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/gym_img"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:text="짐지수"
                    android:layout_marginLeft="3dp"
                    android:layout_centerVertical="true"
                    android:textColor="#517cc3"
                    android:textSize="10.5sp" />

                <TextView
                    android:id="@+id/rv_gym_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/gym_index_text"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:text="3.5"
                    android:layout_centerVertical="true"
                    android:textColor="#517cc3"
                    android:textSize="10.5sp" />

                <ImageView
                    android:id="@+id/time_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.5dp"
                    android:layout_toRightOf="@id/rv_gym_index"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/rv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/time_img"
                    android:fontFamily="@font/nanumsquare_regular"
                    android:text="화,목 오후 8시"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:textColor="#454545"
                    android:textSize="10.5sp" />-->
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>