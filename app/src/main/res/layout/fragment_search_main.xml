<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchMainFragment"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:id="@+id/search_fragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:layout_marginHorizontal="27dp">
        <View
            android:layout_width="100dp"
            android:layout_height="8dp"
            android:background="#d6eeff"
            android:layout_alignBottom="@id/text1">
        </View>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어떤 강의"
            android:fontFamily="@font/nanumsquare_regular"
            android:textColor="#151515"
            android:textSize="25sp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="를 찾으시나요?"
            android:layout_toRightOf="@id/text1"
            android:fontFamily="@font/nanumsquare_light"
            android:textColor="#151515"
            android:textSize="25sp"
            android:layout_marginTop="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29.3dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="28.3dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_search"
            android:layout_marginHorizontal="27dp"
            android:paddingHorizontal="30dp"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:imeActionLabel="검색"
            android:maxLines="1"
            android:lines="1"
            android:fontFamily="@font/nanumsquare_regular"
            android:textSize="16sp"
            android:textColor="#1f1f1f"
            android:id="@+id/search_view"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:layout_alignLeft="@id/search_view"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8.3dp"
            android:id="@+id/search_icon"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="31dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_regular"
                android:textColor="#2c77f1"
                android:textSize="20sp"
                android:id="@+id/keyword_sharp"
                android:text="#_"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_bold"
                android:textColor="#3c3c3c"
                android:textSize="20sp"
                android:layout_alignRight="@id/keyword_sharp"
                android:text=" 인기 검색 키워드"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="33dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_keyword"
                android:textSize="16sp"
                android:textColor="#0d0d0d"
                android:fontFamily="@font/nanumsquare_light"
                android:layout_margin="4dp"
                android:text="#농구"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_keyword"
                android:textSize="16sp"
                android:textColor="#0d0d0d"
                android:fontFamily="@font/nanumsquare_light"
                android:layout_margin="4dp"
                android:text="#주짓수"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_keyword"
                android:textSize="16sp"
                android:textColor="#0d0d0d"
                android:fontFamily="@font/nanumsquare_light"
                android:layout_margin="4dp"
                android:text="#수영"/>
            <TextView
                android:id="@+id/btn_frag_search_main_taekwondo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_keyword"
                android:textSize="16sp"
                android:textColor="#0d0d0d"
                android:fontFamily="@font/nanumsquare_light"
                android:layout_margin="4dp"
                android:text="#태권도"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="33dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_keyword"
                android:textSize="16sp"
                android:textColor="#0d0d0d"
                android:fontFamily="@font/nanumsquare_light"
                android:layout_margin="4dp"
                android:text="#새벽반"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_keyword"
                android:textSize="16sp"
                android:textColor="#0d0d0d"
                android:fontFamily="@font/nanumsquare_light"
                android:layout_margin="4dp"
                android:text="#오전반"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_keyword"
                android:textSize="16sp"
                android:textColor="#0d0d0d"
                android:fontFamily="@font/nanumsquare_light"
                android:layout_margin="4dp"
                android:text="#경력3년이상"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="33dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_keyword"
                android:textSize="16sp"
                android:textColor="#0d0d0d"
                android:fontFamily="@font/nanumsquare_light"
                android:layout_margin="4dp"
                android:text="#일대일"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_keyword"
                android:textSize="16sp"
                android:textColor="#0d0d0d"
                android:fontFamily="@font/nanumsquare_light"
                android:layout_margin="4dp"
                android:text="#10명이상"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>