<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/space_image"
            android:layout_width="96dp"
            android:layout_height="91dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cp_yoga">

        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="91dp">
            <TextView
                android:id="@+id/rental_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nanumsquare_regular"
                android:textSize="13sp"
                android:textColor="#1263e6"
                android:lineSpacingExtra="3.8sp"
                android:text="12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/space_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.3dp"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:letterSpacing="-0.07"
                    android:lineSpacingExtra="8.3sp"
                    android:textColor="#2c77f1"
                    android:textSize="9.5sp"
                    android:text="요가 | 발레 | 댄스 | 기타 " />

                <TextView
                    android:id="@+id/space_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.3dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:lineSpacingExtra="3.8sp"
                    android:textColor="#404040"
                    android:textSize="15sp"
                    android:text="청파 요가원 " />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.3dp"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/placeholder"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/space_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="6.3sp"
                        android:fontFamily="@font/nanumsquare_light"
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="2dp"
                        android:textSize="11.5sp"
                        android:text="서울특별시 용산구 청파로47길 45 " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.3dp"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ticktock"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/space_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/nanumsquare_light"
                        android:textSize="10.5sp"
                        android:textColor="@color/colorBlack"
                        android:lineSpacingExtra="6.3sp"
                        android:text="주중 오후 8시 이후 사용가능 | 주말 전시간대 사용가능 " />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#c2c2d4"/>
</LinearLayout>