<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#c2c2d4"/>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/space_image"
            android:layout_width="96dp"
            android:layout_height="91dp"

            android:background="@drawable/cp_yoga">

        </ImageView>
        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="91dp"
            android:layout_marginBottom="3dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.5dp"
                    android:layout_marginLeft="215dp"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:textSize="13sp"
                    android:textColor="#1263e6"
                    android:lineSpacingExtra="3.8sp"
                    android:text="총 "
                    />
                <TextView
                    android:id="@+id/rental_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.5dp"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:textSize="13sp"
                    android:textColor="#1263e6"
                    android:lineSpacingExtra="3.8sp"
                    android:text="12"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.5dp"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:textSize="13sp"
                    android:textColor="#1263e6"
                    android:lineSpacingExtra="3.8sp"
                    android:text="회 대여 "
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/space_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.3dp"
                android:fontFamily="@font/nanumsquare_bold"
                android:letterSpacing="-0.07"
                android:lineSpacingExtra="8.3sp"
                android:textColor="#2c77f1"
                android:textSize="9.5sp"
                android:text="요가 | 발레 | 댄스 | 기타 " />

            <TextView
                android:id="@+id/space_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.3dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nanumsquare_bold"
                android:lineSpacingExtra="3.8sp"
                android:textColor="#404040"
                android:textSize="15sp"
                android:text="청파 요가원 " />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.3dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/placeholder">

                </ImageView>

                <TextView
                    android:id="@+id/space_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6.3sp"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:textColor="#404040"
                    android:textSize="11.5sp"
                    android:text="서울특별시 용산구 청파로47길 45 " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.3dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ticktock">

                </ImageView>

                <TextView
                    android:id="@+id/space_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:textSize="10.5sp"
                    android:textColor="#404040"
                    android:lineSpacingExtra="6.3sp"
                    android:text="주중 오후 8시 이후 사용가능 | 주말 전시간대 사용가능 "
                    />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>