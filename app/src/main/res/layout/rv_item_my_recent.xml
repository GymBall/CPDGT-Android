<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="130dp"
    android:layout_height="157.5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_rv_item_frag_my_recent_whole"
        android:layout_width="100.5dp"
        android:layout_height="157.5dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="6dp"
        android:background="@drawable/white_radius_fill_shadow">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="9.8dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_rv_item_frag_my_teacher_image"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:layout_marginVertical="11dp"
                android:src="@drawable/recentgt" />
            <TextView
                android:id="@+id/tv_rv_item_frag_my_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7.5sp"
                android:textColor="#4d4c4c"
                android:letterSpacing="-0.08"
                android:lineSpacingExtra="1.3sp"
                android:fontFamily="@font/nanumsquare_regular"
                tools:text="이대훈 짐선생"/>
            <TextView
                android:id="@+id/iv_rv_item_frag_my_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.5sp"
                android:textColor="#000000"
                android:letterSpacing="-0.08"
                android:lineSpacingExtra="1.8sp"
                android:fontFamily="@font/nanumsquare_extrabold"
                tools:text="태권도 초급반"/>
            <TextView
                android:id="@+id/iv_rv_item_frag_my_class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.3sp"
                android:textColor="#000000"
                android:letterSpacing="-0.08"
                android:lineSpacingExtra="1.3sp"
                android:fontFamily="@font/nanumsquare_bold"
                tools:text="화, 목 오후 8시"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>