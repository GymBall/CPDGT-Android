<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="165dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_rv_item_frag_my_recent_whole"
        android:layout_width="100dp"
        android:layout_height="155dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="6dp"
        android:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_rv_item_frag_my_teacher_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="11dp"
                android:src="@drawable/recentgt" />
            <TextView
                android:id="@+id/tv_rv_item_frag_my_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="7dp"
                android:textColor="#4d4c4c"
                android:letterSpacing="-0.08"
                android:fontFamily="@font/nanumsquare_regular"
                tools:text="이대훈 짐선생"/>
            <TextView
                android:id="@+id/iv_rv_item_frag_my_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="7dp"
                android:textColor="#000000"
                android:letterSpacing="-0.08"
                android:fontFamily="@font/nanumsquare_bold"
                tools:text="태권도 초급반"/>
            <TextView
                android:id="@+id/iv_rv_item_frag_my_class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="7dp"
                android:textColor="#535353"
                android:letterSpacing="-0.08"
                android:fontFamily="@font/nanumsquare_regular"
                tools:text="화, 목 오후 8시"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>