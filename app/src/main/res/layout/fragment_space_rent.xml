<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4.8dp"
            android:fontFamily="@font/nanumsquare_bold"
            android:textSize="18sp"
            android:textColor="#c40000"
            android:lineSpacingExtra="2sp"
            android:text="POWER"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/nanumsquare_bold"
            android:textSize="18sp"
            android:textColor="#5975a2"
            android:lineSpacingExtra="2sp"
            android:text="GYM"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/nanumsquare_bold"
            android:textSize="8.8sp"
            android:lineSpacingExtra="1.3sp"
            android:textColor="#2c77f1"
            android:text="  광고  "
            android:background="@drawable/blue_rectangle_empty" ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ad_powergym"
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:background="@drawable/bliss_ad" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/white_border_fill"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ad_powergym_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/nanumsquare_bold"
                android:letterSpacing="-0.07"
                android:lineSpacingExtra="8.3sp"
                android:text="요가 | 발레 | 기타"
                android:textColor="#2c77f1"
                android:textSize="8.5sp" />

            <TextView
                android:id="@+id/ad_powergym_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nanumsquare_bold"
                android:lineSpacingExtra="3.8sp"
                android:text="블리스 필라테스"
                android:textColor="#404040"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/placeholder">

                </ImageView>

                <TextView
                    android:id="@+id/ad_powergym_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:lineSpacingExtra="6.3sp"
                    android:text="서울특별시 용산구 청파로47길 78 "
                    android:textColor="#404040"
                    android:textSize="10.5sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/ticktock">

                </ImageView>

                <TextView
                    android:id="@+id/ad_powergym_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:lineSpacingExtra="6.3sp"
                    android:text="주중 오후 7시 이후 사용가능 | 주말 전시간대 사용가능 "
                    android:textColor="#404040"
                    android:textSize="10.5sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    >
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/nanumsquare_bold"
                        android:lineSpacingExtra="3.8sp"
                        android:text="총"
                        android:textColor="#1263e6"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/ad_powergym_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@font/nanumsquare_bold"
                        android:lineSpacingExtra="3.8sp"
                        android:text="78"
                        android:textColor="#1263e6"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@font/nanumsquare_bold"
                        android:lineSpacingExtra="3.8sp"
                        android:text="회 대여"
                        android:textColor="#1263e6"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/skyblue_rectangle_fill"
        android:layout_marginTop="15dp"
        ></ImageView>

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_spaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:paddingBottom="40dp"
            tools:listitem="@layout/rv_item_space">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_rectangle_fill"
            android:layout_alignBottom="@+id/recycler_spaceview"
            android:fontFamily="@font/nanumsquare_bold"
            android:text="공간 대여하기" />
    </RelativeLayout>
</LinearLayout>