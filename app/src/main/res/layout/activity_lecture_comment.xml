<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lecture.LectureCommentActivity"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#404040"
                android:text="후기 작성하기"
                android:fontFamily="@font/nanumsquare_bold"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/btn_act_lecture_comment_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:id="@+id/btn_act_lecture_comment_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#6c6c6c"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="25dp">
            <ImageView
                android:id="@+id/iv_act_lecture_comment_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/lecture_comment_teacher"
                android:scaleType="centerInside"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/iv_act_lecture_comment_profile"
                android:layout_marginLeft="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="태권도 초급반"
                    android:fontFamily="@font/nanumsquare_regular"
                    android:textSize="14sp"
                    android:textColor="#585858"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이대훈 짐선생"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:textSize="16sp"
                    android:textColor="#585858"
                    android:layout_marginTop="3dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="13.8dp"
                        android:layout_height="13.8dp"
                        android:src="@drawable/lecture_comment_gymscore"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="짐지수 3.5"
                        android:textSize="10.5sp"
                        android:textColor="#517cc3"
                        android:fontFamily="@font/nanumsquare_bold"
                        android:layout_marginLeft="3dp"/>
                    <ImageView
                        android:layout_width="13.8dp"
                        android:layout_height="13.8dp"
                        android:src="@drawable/lecture_comment_time"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="화,목 오후 8"
                        android:textSize="10.5dp"
                        android:textColor="#454545"
                        android:fontFamily="@font/nanumsquare_regular"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#6c6c6c"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="짐지수"
                android:textColor="#517cc3"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:fontFamily="@font/nanumsquare_bold"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/iv_act_lecture_comment_score1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:background="@drawable/selector_lecture_comment_gymscore"
                android:layout_marginLeft="9dp"/>
            <ImageView
                android:id="@+id/iv_act_lecture_comment_score2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:background="@drawable/selector_lecture_comment_gymscore"
                android:layout_marginLeft="4dp"/>
            <ImageView
                android:id="@+id/iv_act_lecture_comment_score3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:background="@drawable/selector_lecture_comment_gymscore"
                android:layout_marginLeft="4dp"/>
            <ImageView
                android:id="@+id/iv_act_lecture_comment_score4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:background="@drawable/selector_lecture_comment_gymscore"
                android:layout_marginLeft="4dp"/>
            <ImageView
                android:id="@+id/iv_act_lecture_comment_score5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:background="@drawable/selector_lecture_comment_gymscore"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/et_act_lecture_comment"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:paddingHorizontal="20dp"
            android:textSize="15sp"
            android:textColor="#505050"
            android:textColorHint="#6f6f6f"
            android:hint="위의 강의에 대한 후기를 작성해보세요!"
            android:fontFamily="@font/nanumsquare_light"
            android:gravity="top"
            android:background="@null"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_act_lecture_comment_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성 완료하기"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nanumsquare_bold"
            android:layout_centerInParent="true">
        </TextView>
    </RelativeLayout>
</RelativeLayout>