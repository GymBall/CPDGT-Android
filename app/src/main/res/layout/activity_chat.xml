<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lecturedetail.ChatActivity"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f7fafe"
        android:id="@+id/top">
        <ImageView
            android:id="@+id/btn_act_chat_back"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/arrow_left"
            android:layout_marginLeft="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_bold"
            android:layout_centerHorizontal="true"
            android:textColor="#262626"
            android:textSize="16dp"
            android:text="이수영 짐선생"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="#f7fafe"
        android:layout_below="@id/top"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요, \n이 강의에 대해 문의하려고 합니다!"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:fontFamily="@font/nanumsquare_light"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="#e6f0fd"
        android:layout_below="@id/top"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요, 이수영 짐선생입니다! \n문의하신 강의가 화,목 오후 8시\n태권도 초급반 맞으신가요?"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:fontFamily="@font/nanumsquare_light"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_act_chat_confirm"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="수업이 확정되었습니다."
        android:layout_marginTop="290dp"
        android:textSize="18sp"
        android:fontFamily="@font/nanumsquare_bold"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_act_chat_plus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chat_plus"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:background="@drawable/chat_edittext_back"
            android:layout_margin="16dp"
            android:fontFamily="@font/nanumsquare_light"
            android:textColor="#505050"
            android:textSize="15sp"
            android:paddingLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>