<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:padding="10dp"
    android:layout_marginVertical="11dp">

    <ImageView
        android:id="@+id/rv_class_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/detail_tak_img" />

    <RelativeLayout
        android:id="@+id/class_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rv_class_image">

        <RelativeLayout
            android:id="@+id/rv_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6.5dp">

            <TextView
                android:id="@+id/rv_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_regular"
                android:text="태권도 초급반"
                android:textColor="#2c77f1"
                android:textSize="14.3sp" />

            <TextView
                android:id="@+id/rv_gym_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/teacher_txt"
                android:fontFamily="@font/nanumsquare_bold"
                android:text="이대훈"
                android:textColor="#151515"
                android:textSize="12.5sp" />

            <TextView
                android:id="@+id/teacher_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/nanumsquare_bold"
                android:text="짐선생"
                android:textColor="#505050"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/class_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6.5dp"
            android:layout_below="@id/rv_class">

            <ImageView
                android:id="@+id/gym_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gym_index" />

            <TextView
                android:id="@+id/gym_index_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/gym_img"
                android:fontFamily="@font/nanumsquare_bold"
                android:text="짐지수"
                android:textColor="#244274"
                android:textSize="10.5sp" />

            <TextView
                android:id="@+id/rv_gym_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/gym_index_text"
                android:fontFamily="@font/nanumsquare_bold"
                android:text="3.5"
                android:textColor="#244274"
                android:textSize="10.5sp" />

            <ImageView
                android:id="@+id/time_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.5dp"
                android:layout_toRightOf="@id/rv_gym_index"
                android:src="@drawable/time" />

            <TextView
                android:id="@+id/rv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/time_img"
                android:fontFamily="@font/nanumsquare_regular"
                android:text="화,목 오후 8시"
                android:textColor="#454545"
                android:textSize="10.5sp" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="6.3dp"
            android:layout_below="@id/class_score">
            <TextView
                android:id="@+id/rv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:textSize="10sp"
                android:fontFamily="@font/nanumsquare_regular"
                android:text="눈높이 교육으로 배워가는 태권도! 이 수업과 함께라면 당신도 태권도 고수!"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

