<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/whole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginVertical="5dp">
        <ImageView
            android:id="@+id/rv_class_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:src="@drawable/detail_tak_img" />

        <LinearLayout
            android:id="@+id/class_detail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:weightSum="3"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/rv_class_image">

            <RelativeLayout
                android:id="@+id/rv_class"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/rv_class_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_regular"
                    android:text="태권도 초급반"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1dp"
                    android:textColor="#2c77f1"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/rv_gym_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/teacher_txt"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:text="이대훈"
                    android:layout_centerVertical="true"
                    android:textColor="#151515"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/teacher_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:text=" 짐선생"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="1dp"
                    android:layout_alignBottom="@id/rv_gym_teacher"
                    android:textColor="#505050"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/class_score"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/gym_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/gym_index" />

                <TextView
                    android:id="@+id/gym_index_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/gym_img"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:text="짐지수 "
                    android:textColor="#244274"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rv_gym_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/gym_index_text"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:text="3.5"
                    android:textColor="#244274"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/time_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/rv_gym_index"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/rv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/time_img"
                    android:fontFamily="@font/nanumsquare_regular"
                    android:text="화,목 오후 8시"
                    android:textColor="#454545"
                    android:textSize="12sp" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/rv_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#454545"
                    android:layout_gravity="center_vertical"
                    android:textSize="10sp"
                    android:fontFamily="@font/nanumsquare_regular"
                    android:text="눈높이 교육으로 배워가는 태권도! 이 수업과 함께라면 당신도 태권도 고수!"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#8d8d8d"
        android:layout_marginHorizontal="10dp"/>

</LinearLayout>

